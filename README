CREATE DATABASE SOURCING_FRIENDS;

USE SOURCING_FRIENDS;
// 用户详细信息表，
CREATE TABLE USER_PROFILE_SF (
USER_ID INTEGER PRIMARY KEY AUTOINCREMENT, 
NAME VARCHAR(20),
PHOTO BLOB,
BIZ_TYPE VARCHAR(20),
COMPANY VARCHAR(100),
ADDRESS VARCHAR(50),
MINI_SITE VARCHAR(50),
ADDED DATE,
MAIN_PRODUCTS VARCHAR(50),
RECENTLY_QUOTED_B_REQUEST VARCHAR(50)
);

// 消息中心表
CREATE TABLE TRADE_MSG_SF(
TRADE_MSG_ID INTEGER PRIMARY KEY AUTOINCREMENT,
MSG_SENDER_ID INTEGER,
LASTED_MSG_CONTENT VARCHAR(333),
LASTED_MSG_RECEIVED_TIME
);

// 所有的消息表
CREATE TABLE ING_MSG_SF(
ING_MSG_ID INTEGER PRIMARY KEY AUTOINCREMENT,
MSG_SENDER_ID INTEGER,
MSG_SENDED_TIME DATE,
MSG_CONTENT VARCHAR(333),
MSG_RECEIVED_TIME DATE
);

// 收藏的供应商标，和 用户信息表数据差不多，但是在用户信息表中，并不一定是自己的收藏的供应商
CREATE TABLE SUPPLIER_LIST_SF(
SUPPLIER_ID INTEGER PRIMARY KEY AUTOINCREMENT,
NAME VARCHAR(20),
PHOTO BLOB,
BIZ_TYPE VARCHAR(20),
COMPANY VARCHAR(100),
ADDRESS VARCHAR(50),
MINI_SITE VARCHAR(50),
ADDED VARCHAR(10),
MAIN_PRODUCTS VARCHAR(50),
RECENTLY_QUOTED_B_REQUEST VARCHAR(50)
);

